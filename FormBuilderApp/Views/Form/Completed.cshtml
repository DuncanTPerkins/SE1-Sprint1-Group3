@model IEnumerable<FormBuilderApp.Models.Form>
@{
    ViewBag.Title = "Submitted Forms";
}
<h2>Completed Forms</h2>
<div style="width: 60%; margin: 0 auto;">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                    User
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name) | 
                    @Html.ActionLink("View", "Review", new { Controller = "Form", id = item.Id })
                </td>
               
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
            </tr>
        }
    </table>
</div>
