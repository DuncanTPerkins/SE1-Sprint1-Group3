
@{
    ViewBag.Title = "Assign Roles";
}

<h2>Assign Roles</h2>

@{ 
    var userNames = ViewBag.UserNames;
    var roleNames = ViewBag.RoleNames;
}

<form method="post" action="/user/assignrole">
    <div class="form-horizontal">

        <div class="form-group">
            <label for="UserName" class="control-label col-md-2">User email:</label>
            <div class="col-md-10">
                <select id="Username" name="username" class="form-control">
                    @foreach(var name in userNames)
                    {
                        <option>
                            @name
                        </option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <label for="Rolename" class="control-label col-md-2">Role:</label>
            <div class="col-md-10">
                <select id="Rolename" name="rolename" class="form-control">
                    @foreach (var name in roleNames)
                    {
                        <option>
                            @name
                        </option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Assign" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a href="/user/users">Back to List</a>
</div>