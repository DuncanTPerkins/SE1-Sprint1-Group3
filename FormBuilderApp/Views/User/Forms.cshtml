@model IEnumerable<FormBuilderApp.Models.Form>
@{
    ViewBag.Title = "Available Forms";
}
<h2>Available Forms</h2>
<div style="width: 60%; margin: 0 auto;">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.IsCompleted)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsAccepted)
                </th>*@
            <th></th>
        </tr>
        @foreach (var item in Model.Where(x => x.Status == FormBuilderApp.Models.Form.FormStatus.Template))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.IsCompleted)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsAccepted)
                    </td>*@
                <td>
                    @Html.ActionLink("Fill Out", "FillOut",new {Controller = "User", id = item.Id })
                    @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
                </td>
            </tr>
        }
    </table>
</div>

<h2>Draft Forms</h2>
<div style="width: 60%; margin: 0 auto;">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
        </tr>
        @foreach (var item in Model.Where(x => x.Status == FormBuilderApp.Models.Form.FormStatus.Draft && x.UserId == ViewBag.UserId))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Fill Out", "FillOut", new { Controller = "User", id = item.Id })
                </td>
            </tr>
        }
    </table>
</div>
