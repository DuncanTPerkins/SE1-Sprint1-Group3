@model IEnumerable<FormBuilderApp.Models.Form>

@{
    ViewBag.Title = "FillOut";
}

@if(ViewBag.DenyReason != null)
{
    <h3>Form Applicaton Denied. Reason Given: @ViewBag.DenyReason</h3>
}

<h2>@ViewBag.Name.</h2>

<input type="hidden" id="FormID" name="FormID" value="@ViewBag.Id" />

<form name="genform">
    @Html.Raw(ViewBag.FormHtml)
</form>

@section JavaScript
{        
    @if (ViewBag.FormObjectRepresentation != null)
    {
        <script>window.formValues = @Html.Raw(ViewBag.FormObjectRepresentation)</script>
    }
    <script src="~/js/UserSubmit.js"></script>
}